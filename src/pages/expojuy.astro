---
import Head from "@/components/Head.astro";

import LogoEx from "@/assets/expojuy/img/encabezado.webp";
import FondoEx from "@/assets/expojuy/img/fondo.webp";
import Instinto from "@/assets/expojuy/img/instinto.webp";
import FechasEx from "@/assets/expojuy/img/fechas.webp";

const backgroundUrl = `url(${FondoEx.src})`;
---

<!doctype html>
<html lang="es">
  <Head favIcon={""} image={""}>
    <title>EXPOJUY 2024 - Conoce.Me</title>
  </Head>
  <body>
    <main>
      <div class="tarjeta">
        <div class="contenedorImagen">
          <img src={LogoEx.src} alt="" class="imagenPersonal" />
        </div>
        <div class="contenedorImagenFecha">
          <img src={FechasEx.src} alt="" class="imagenPersonal" />
        </div>

        <div class="contenedorRedes">
          <div class="contenedorEnlaces">
            <a
              href="https://boleteriadigital.com.ar/funciones?evento=67"
              class="redes azul"
              target="_blank"
            >
              COMPRAR ENTRADAS</a
            >
            <a
              href="/files/planoExpoJuy.pdf"
              class="redes violeta"
              target="_blank"
            >
              PLANO DEL PREDIO</a
            >

            <a
              href="/files/expojuy-shows.pdf"
              target="_blank"
              class="redes verde">SHOWS</a
            >
            <a
              href="/files/programaEXPOJUY.pdf"
              target="_blank"
              class="redes rojo">CONFERENCIAS</a
            >
            <a
              href="https://www.expojuy.camcomexjujuy.com.ar"
              target="_blank"
              class="redes azul">PAGINA WEB</a
            >
            <a
              href="/files/revistaexpojuy2024.pdf"
              target="_blank"
              class="redes violeta">REVISTA EXPOJUY 2024</a
            >
            <a
              href="https://www.facebook.com/expojuy?mibextid=JRoKGi"
              target="_blank"
              class="redes verde">FACEBOOK</a
            >
            <a
              href="https://www.instagram.com/expojuy?igsh=bW1ybGo2OXUyY2lv"
              target="_blank"
              class="redes rojo">INSTAGRAM</a
            >
            <a
              href="https://www.tiktok.com/@expojuy?_t=8qCFW9tmvSA&_r=1"
              target="_blank"
              class="redes azul">TIKTOK</a
            >
          </div>
        </div>
        <div class="espacio"></div>
        <div class="footer">
          <p>
            DESARROLLADO POR <b
              ><a href="https://www.crystal-desarrollo.com"
                >CRYSTAL DESARROLLO</a
              ></b
            >
          </p>
          <p>|</p>
          <img src={Instinto.src} alt="" />
        </div>
      </div>
    </main>

    <style define:vars={{ backgroundUrl }}>
      @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600&display=swap");

      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: "Open Sans", sans-serif;
      }

      body {
        display: flex;
        align-items: center;
      }

      main {
        width: 100%;
        height: auto;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        overflow: hidden;
        background-image: var(--backgroundUrl);
        background-repeat: no-repeat;
        background-size: cover;
      }

      main .tarjeta {
        width: 100%;
        max-width: 40rem;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0px 0px 10px 2px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        position: relative;
      }

      main .tarjeta .contenedorImagen {
        padding: 2rem 3rem;
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
      }

      main .tarjeta .contenedorImagen img {
        width: 100%;
      }

      main .tarjeta .contenedorImagenFecha {
        padding: 0rem 2rem;
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
      }

      main .tarjeta .contenedorImagenFecha img {
        width: 100%;
      }

      main .contenedorRedes {
        width: 100%;
        padding: 2rem 0rem;
        display: flex;
      }

      main .contenedorRedes .contenedorEnlaces {
        width: 100%;
        align-self: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
      }

      main .contenedorRedes .contenedorEnlaces .redes {
        width: 90%;
        padding: 1rem;
        text-decoration: none;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        font-weight: 600;
        border-radius: 1rem;
      }

      main .contenedorRedes .contenedorEnlaces .verde {
        background-color: #b5b936;
        color: #fff;
      }

      main .contenedorRedes .contenedorEnlaces .violeta {
        background-color: #a17a99;
        color: #fff;
      }

      main .contenedorRedes .contenedorEnlaces .azul {
        background-color: #358fbf;
        color: #fff;
      }

      main .contenedorRedes .contenedorEnlaces .rojo {
        background-color: #f75451;
        color: #fff;
      }

      main .contenedorRedes .contenedorEnlaces .redes:hover {
        background: #ada598;
        border: none;
        transition: 0.3s all ease;
      }

      main .tarjeta .imgBidon {
        height: 80vh;
        max-width: 50%;
        position: absolute;
        right: 0rem;
        bottom: 0rem;
      }

      main .footer {
        width: 100%;
        padding: 1rem 0.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        color: #4b4b4d;
      }

      main .footer img {
        width: 6rem;
      }

      /*RESPONSIVE*/
      @media screen and (max-width: 460px) {
      }
    </style>
  </body>
</html>
