---
import Head from "@/components/Head.astro";

import type { CollectionEntry } from "astro:content";

type Props = CollectionEntry<"blog">["data"];

const { logo, name, description, social, links, style, favIcon } = Astro.props;
---

<!doctype html>
<html lang="es">
  <Head name={name} favIcon={favIcon}>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles/styles.css" />
  </Head>
  <body
    class="w-full min-h-screen bg-gradient-to-b from-neutral-100 to-neutral-300"
  >
    <div class="container py-16">
      <div class="row flex-column align-items-center">
        <div class="text-center">
          <img
            src={`logos/${logo}`}
            alt="imagen personal"
            class="rounded-circle mx-auto"
            height="250"
            width="250"
          />
        </div>
        <h4 class="text-center mt-8">Â¡Nuestros enlaces!</h4>
        <p class="descripcion text-center my-8">
          {description}
        </p>

        <div class="col-md-4 mb-3 mb-md-0 text-center">
          <a
            href="https://www.instagram.com/paquitacrafts/"
            class="btn btn-primary btn-lg d-block mb-2"
            ><span class="ti ti-brand-instagram"></span>
            Instagram</a
          >
        </div>
        <div class="col-md-4 mb-3 mb-md-0 text-center">
          <a
            href="https://wa.me/message/G5ELDUBLJ6X4N1"
            class="btn btn-success btn-lg d-block mb-2"
            ><span class="ti ti-brand-whatsapp"></span> Nuestro WhatsApp</a
          >
        </div>
      </div>
      <footer class="text-center mt-16 mb-0">
        <p class="mb-0">
          Hecho por <a href="https://crystal-desarrollo.com/"
            >Crystal Desarrollo</a
          >ðŸ’Ž
        </p>
      </footer>
    </div>
    <style>
      body {
        font-size: 16px;
      }

      .container {
        max-width: 150%;
        margin: 0 auto;
      }

      .btn {
        line-height: 2rem;
        font-size: 1.2rem;
        border-radius: 1rem;
        transition: all 0.2s;
      }

      .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0px 5px 5px 0px #373c3c;
      }

      .hola {
        text-decoration: underline blue;
      }

      .separador {
        background-color: transparent;
        color: transparent;
      }

      h4 {
        font-family: "Amatic SC", cursive;
        font-size: 2.3rem;
      }

      .descripcion {
        font-family: "Indie Flower", cursive;
        font-size: 1.5rem;
      }
      .btn-primary:hover {
        background-color: #e1306c;
        border-color: #e1306c;
        color: #ffffff;
      }

      .btn-primary {
        background-color: #e4405f;
        border-color: #e1306c;
        color: #ffffff;
      }

      @media (max-width: 873px) {
        .btn {
          font-size: 1rem;
        }
        .mb-0 {
          font-size: 0.9rem;
        }
      }

      @media (max-width: 991.98px) {
        .row > div {
          flex: 0 0 100%;
          max-width: 100%;
          margin-bottom: 1rem;
        }
        .descripcion {
          font-family: "Indie Flower", cursive;
          font-size: 1.3rem;
        }
        h4 {
          font-family: "Amatic SC", cursive;
          font-size: 2rem;
        }
      }

      @media (max-width: 350px) {
        .row > div {
          flex: 0 0 100%;
          max-width: 100%;
          margin-bottom: 1rem;
        }
        .descripcion {
          font-family: "Indie Flower", cursive;
          font-size: 0.9rem;
        }
        h4 {
          font-family: "Amatic SC", cursive;
          font-size: 2rem;
        }
      }

      @media (min-width: 992px) {
        .row > div {
          flex: 0 0 100%;
          max-width: 100%;
        }
      }

      .rounded-circle {
        border: 3px solid #7f8c8d;
        overflow: hidden;
        margin-top: 1px;
      }
    </style>
  </body>
</html>
