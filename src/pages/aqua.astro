---
import Head from "@/components/Head.astro";

import LogoAq from "@/assets/aqua/img/logoAQ.png";
import BidonAq from "@/assets/aqua/img/bidonAQ.png";
import OndaSuperior from "@/assets/aqua/img/ondasuperior.png";
import OndaInferior from "@/assets/aqua/img/ondainferior.png";
import LogoIco from "@/assets/aqua/img/logo.ico";
import FondoAq from "@/assets/aqua/img/fondoAQ.jpg";

const backgroundUrl = `url(${FondoAq.src})`;
---

<!doctype html>
<html lang="es">
  <Head favIcon={LogoIco} image={LogoAq.src}>
    <title>AQUA - Manantial de Tilcara - Conoce.Me</title>
  </Head>
  <body class="bg-gradient-to-r from-[#49a8b3] to-[#b3e1e5]">
    <main>
      <div class="tarjeta">
        <div class="contenedorImagen">
          <img src={LogoAq.src} alt="Logo Aqua" class="imagenPersonal" />
        </div>

        <div class="contenedorRedes">
          <div class="contenedorEnlaces">
            <a
              href="https://maps.app.goo.gl/mWCmKi3h2TJXwbDK9"
              class="redes gris"
              target="_blank"
              ><i class="ti ti-pin ubicacion icon turquoiseicon"></i>
              DÓNDE ESTAMOS</a
            >

            <a href="#" class="redes turquesa"
              ><i class="ti ti-droplet-filled icon whiteicon"></i>NUESTRA
              HISTORIA</a
            >

            <div class="wppCompuesto wppCompuestoGris">
              <a
                href="https://wa.link/yb9dgl"
                class="redes gris redeswpp"
                target="_blank"
                ><i class="ti ti-brand-whatsapp icon turquoiseicon"></i>ZONA 1
              </a>
              <div class="localidades">
                <p>Huacalera | Uquía</p>
                <p>Humahuaca</p>
                <p>Abra Pampa</p>
                <p>La Quiaca</p>
              </div>
            </div>

            <div class="wppCompuesto wppCompuestoTurquesa">
              <a
                href="https://wa.link/5m301h"
                class="redes turquesa"
                target="_blank"
                ><i class="ti ti-brand-whatsapp icon whiteicon"></i>ZONA 2</a
              >
              <div class="localidades">
                <p>Tumbaya</p>
                <p>Purmamarca</p>
                <p>Maimará</p>
                <p>Tilcara</p>
              </div>
            </div>

            <a
              href="https://www.instagram.com/"
              class="redes gris"
              target="_blank"
              ><i class="ti ti-brand-instagram icon whiteicon circleIcon"
              ></i>INSTRAGRAM</a
            >
          </div>
        </div>
        <div class="espacio"></div>
        <img src={BidonAq.src} alt="img agua" class="imgBidon" />
        <img src={OndaSuperior.src} alt="img agua" class="imgOndaSuperior" />
        <img src={OndaInferior.src} alt="img agua" class="imgOndaInferior" />
      </div>
    </main>
    <style define:vars={{ backgroundUrl }}>
      @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600&display=swap");

      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: "Open Sans", sans-serif;
      }

      body {
        display: flex;
        align-items: center;
      }

      main {
        width: 100%;
        height: auto;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        overflow: hidden;
      }

      main .tarjeta {
        width: 100%;
        max-width: 40rem;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0px 0px 10px 2px rgba(0, 0, 0, 0.5);
        background-image: var(--backgroundUrl);
        background-repeat: no-repeat;
        background-size: cover;
        overflow: hidden;
        position: relative;
      }

      main .tarjeta .contenedorImagen {
        padding: 5rem 0rem 0rem 3rem;
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: column;
      }

      main .tarjeta .contenedorImagen img {
        width: 12rem;
      }

      main .contenedorRedes {
        width: 100%;
        padding: 2rem 0rem;
        display: flex;
      }

      main .contenedorRedes .contenedorEnlaces {
        width: 100%;
        align-self: center;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        gap: 1rem;
      }

      main .contenedorRedes .contenedorEnlaces .wppCompuesto {
        width: 100%;
        min-height: 4.5rem;
        padding: 0.5rem 0rem;
        display: flex;
        align-items: center;
        justify-content: flex-start;
      }

      main .contenedorRedes .contenedorEnlaces .wppCompuesto .redes {
        width: auto;
        min-height: 4.5rem;
        padding: 0rem 1rem;
        border-right: 0.1rem solid #fff;
      }

      main .contenedorRedes .contenedorEnlaces .wppCompuestoGris {
        background-color: #d2d3d5;
      }

      main .contenedorRedes .contenedorEnlaces .wppCompuestoTurquesa {
        background-color: #4aa8b3;
      }

      main .contenedorRedes .contenedorEnlaces .wppCompuesto p {
        font-size: 0.8rem;
        margin-left: 1rem;
      }
      main .contenedorRedes .contenedorEnlaces .wppCompuestoGris p {
        color: #6d6e70;
      }
      main .contenedorRedes .contenedorEnlaces .wppCompuestoTurquesa p {
        color: #fff;
      }

      main .contenedorRedes .contenedorEnlaces .redes {
        width: 100%;
        padding: 1rem;
        text-decoration: none;
        border: none;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        font-size: 1.2rem;
        font-weight: 400;
      }
      main .contenedorRedes .contenedorEnlaces .gris {
        background-color: #d2d3d5;
        color: #6d6e70;
      }
      main .contenedorRedes .contenedorEnlaces .turquesa {
        background-color: #4aa8b3;
        color: #fff;
      }

      main .contenedorRedes .contenedorEnlaces .redes .icon {
        width: 2.5rem;
        height: 2.5rem;
        margin-right: 0.5rem;
        font-size: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      main .contenedorRedes .contenedorEnlaces .redes .turquoiseicon {
        color: #4aa8b3;
      }
      main .contenedorRedes .contenedorEnlaces .redes .whiteicon {
        color: #fff;
      }

      main .contenedorRedes .contenedorEnlaces .redes .circleIcon {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #4aa8b3;
        color: #fff;
        border-radius: 50%;
      }

      main .contenedorRedes .contenedorEnlaces .redes:hover {
        background: #ada598;
        border: none;
        transition: 0.3s all ease;
      }

      main .tarjeta .imgBidon {
        height: 80vh;
        max-width: 50%;
        position: absolute;
        right: 0rem;
        bottom: 0rem;
      }
      main .tarjeta .imgOndaSuperior {
        width: 100%;
        position: absolute;
        top: 0rem;
      }
      .espacio {
        height: 8rem;
      }
      main .tarjeta .imgOndaInferior {
        width: 100%;
        position: absolute;
        bottom: 0rem;
      }

      /*RESPONSIVE*/
      @media screen and (max-width: 460px) {
        main .tarjeta .imgBidon {
          height: auto;
          min-height: 80vh;
          max-width: 60%;
          right: -4.5rem;
        }
      }

      @media screen and (max-width: 430px) {
        main .tarjeta .contenedorImagen img {
          width: 8rem;
        }

        main .contenedorRedes .contenedorEnlaces .wppCompuesto {
          width: 100%;
          min-height: 4.5rem;
          padding: 0.5rem 0rem;
          display: flex;
          align-items: center;
          justify-content: flex-start;
        }

        main .contenedorRedes .contenedorEnlaces .redes {
          width: 100%;
          padding: 1rem;
          text-decoration: none;
          border: none;
          display: flex;
          align-items: center;
          justify-content: flex-start;
          font-size: 1rem;
          font-weight: 400;
        }

        main .contenedorRedes .contenedorEnlaces .redes .icon {
          width: 2rem;
          height: 2rem;
          margin-right: 0.5rem;
          font-size: 1.5rem;
          display: flex;
          align-items: center;
          justify-content: center;
        }

        main .tarjeta .imgBidon {
          height: auto;
          min-height: 80vh;
          max-width: 60%;
          position: absolute;
          right: -4.5rem;
          bottom: 0rem;
        }
      }
    </style>
  </body>
</html>
